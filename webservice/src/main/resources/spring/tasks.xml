<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:p="http://www.springframework.org/schema/p"
        xmlns:task="http://www.springframework.org/schema/task"
        xsi:schemaLocation="
            http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-4.0.xsd
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <task:scheduler id="scheduler" pool-size="10" />
    <task:executor id="executor" pool-size="10" />

    <bean id="initAdminUserJobDetail" class="org.springframework.scheduling.quartz.JobDetailFactoryBean"
        p:jobClass="de.comprot.task.InitAdminUserJob" p:durability="true" />

    <bean id="initAdminUserJobTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean"
        p:jobDetail-ref="initAdminUserJobDetail" p:startDelay="0" p:repeatCount="0" />

    <bean id="buildProteinIndexJobDetail" class="org.springframework.scheduling.quartz.JobDetailFactoryBean"
          p:jobClass="de.comprot.task.BuildProteinIndexJob" p:durability="true" />

    <bean id="buildProteinIndexJobTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean"
          p:jobDetail-ref="buildProteinIndexJobDetail" p:startDelay="0" p:repeatCount="0" />

    <!--
        Most of the following is taken from:
        http://www.objectpartners.com/2013/07/09/configuring-quartz-2-with-spring-in-clustered-mode/
    -->

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="jobFactory">
            <bean class="de.comprot.task.AutowiringJobFactory"/>
        </property>
        <property name="triggers">
            <list>
                <ref bean="initAdminUserJobTrigger" />
                <ref bean="buildProteinIndexJobTrigger" />
            </list>
        </property>
    </bean>

</beans>
